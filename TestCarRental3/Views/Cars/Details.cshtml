@model TestCarRental3.Models.Product

@{
    ViewBag.Title = Model.car_model + " Details";
}
<h2>@Html.DisplayFor(model => model.car_model)</h2>

<div class="container">
    <div class="col-md-2">
        <img class="img-responsive" src="~/imgcars/@Model.image" />
    </div>
    <div class="col-md-10">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.car_brand)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.car_model)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.YearOfManufacturing)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.capacity)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.doors)
            </dd>            
            <dd>
                @Html.DisplayFor(model => model.Engine)
            </dd>
            <dd>
                @Html.DisplayFor(model => model.Gearbox)
            </dd>
            <dd>
                $@Html.DisplayFor(model => model.hire_cost)
            </dd>
            <dt></dt>
            <dd><a href="@Url.Action("AddToBasket", "Basket", new { Id=Model.Id })" class="btn btn-primary">Add To Basket</a></dd>
            <dt></dt>
            <dd>@Html.ActionLink("Back to List", "Index")</dd>
        </dl>
    </div>
</div>

