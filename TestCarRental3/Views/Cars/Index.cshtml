@model IEnumerable<TestCarRental3.Models.Product>
@{
    ViewBag.Title = "Cars";
}


<h2>Cars</h2>

<div class="col-md-2">
    <h4>Filter by Category</h4>
    <div class="list-group">
        <hr />
        <p>Sort by Brand</p>
        <hr />
        <select class="field">
            <option value=""> dabedad</option>
        </select>

        <hr />
        <p>Sort by Model</p>
        <hr />
        <select class="field">
            <option value="">dabeda</option>
        </select>


        <hr />
        <p>Sort by Type</p>
        <hr />
        <li>
            <label for="checkid" style="word-wrap:break-word">
                <input id="checkid" type="checkbox" value="Suv" />SUV
            </label>
        </li>
        <li>
            <label for="checkid" style="word-wrap:break-word">
                <input id="checkid" type="checkbox" value="Sport" />Sport
            </label>
        </li>
        <li>
            <label for="checkid" style="word-wrap:break-word">
                <input id="checkid" type="checkbox" value="Sport" />Touring
            </label>
        </li>


        <hr />
        <p> Sort By mileage</p>
        <hr />
        <li>
            <label for="checkid" style="word-wrap:break-word">
                <input id="checkid" type="checkbox" value="Sport" />Low To Hight
            </label>
        </li>
        <li>
            <label for="checkid" style="word-wrap:break-word">
                <input id="checkid" type="checkbox" value="Sport" />Hight to Low
            </label>
        </li>


        <hr />
        <p>Sort By GearBox</p>
        <hr />
        <li>
            <label for="checkid" style="word-wrap:break-word">
                <input id="checkid" type="checkbox" value="Sport" />Automatic
            </label>
        </li>
        <li>
            <label for="checkid" style="word-wrap:break-word">
                <input id="checkid" type="checkbox" value="Sport" />Manual
            </label>
        </li>



        <a href="#" class="btn btn-default"> Filter</a>
    </div>
 </div>

        <div class="col-md-10">
            @foreach (var item in Model)
            {
            <div class="col-md-4" style="height:450px;width:370px;padding:10px;margin:10px;border: solid thin whitesmoke">
                <div class="col-md-12">
                    <img class="img" style="height:190px;width:320px;" src="~/imgcars/@item.image" />
                </div>
                <div class="col-md-12">
                    <strong>Brand: @Html.ActionLink(item.car_brand, "Details", new { id = item.Id })</strong>
                </div>
                <div class="col-md-12">
                    <p>Model: @item.car_model</p>
                </div>

                <div class="col-md-12">
                    <h4>Year: @item.YearOfManufacturing</h4>
                </div>
                <div class="col-md-12">
                    <h4>Engine: @item.Engine</h4>
                </div>
                
                <div class="col-md-12">
                    <h4>Gearbox: @item.Gearbox</h4>
                </div>
                <div class="col-md-12">
                    <h4>@item.hire_cost $/Day</h4> 
                </div>
                <div class="col-md-12">
                    <a href="@Url.Action("BookNow", "Booking", new { Id=item.Id })" class="btn btn-default">Book Now</a>
                    <a href="@Url.Action("Details", "Cars", new { Id=item.Id })" class="btn btn-default">Details</a>
                </div>
            </div>
            }
        </div>
        <div class="col-md-12 clearfix" />
